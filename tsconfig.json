{
   "extends": "./tsconfig.paths.json",
   "compilerOptions": {
      "target": "ES2022",
      "outDir": "./build",
      "lib": [
         "esnext"
      ],
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "ES2022",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "sourceMap": true,
   },
   "ts-node": {
      "esm": true,
      "compilerOptions": {
         "module": "NodeNext"
      }
   },
   "include": [
      "**/*.ts",
      "**/*.js"
   ],
   "exclude": [
      "node_modules"
   ]
}